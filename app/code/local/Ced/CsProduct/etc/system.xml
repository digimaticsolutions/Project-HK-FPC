<config>
	<sections>
		<ced_csmarketplace>
			<show_in_vendor>1</show_in_vendor>
			<groups>
				<general>
					<show_in_vendor>1</show_in_vendor>
					<fields>
						<activation_vproducts translate="label">
							<label>Enable Advance Product System</label>
							<frontend_type>select</frontend_type>
							<config_path>ced_vproducts/general/activation</config_path>
							<comment></comment>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>30</sort_order>
							<show_in_website>1</show_in_website>
							<show_in_default>1</show_in_default>
							<show_in_vendor>1</show_in_vendor>
						</activation_vproducts>
					</fields>
				</general>
				<vproducts>
					<fields>
						<set translate="label comment">
							<label>Allowed Product Attribute Set</label>
							<frontend_type>multiselect</frontend_type>
							<config_path>ced_vproducts/general/set</config_path>
							<source_model>csmarketplace/system_config_source_vproducts_set</source_model>
							<frontend_model>csproduct/adminhtml_system_config_frontend_vproducts_enable</frontend_model>
							<comment></comment>
							<sort_order>20</sort_order>
							<show_in_website>1</show_in_website>
							<show_in_default>1</show_in_default>
							<show_in_vendor>1</show_in_vendor>
						</set>
						<extratabstitle translate="label">
                            <label>Extra Tabs for Vendor Product Entry Form</label>
							<frontend_model>csproduct/adminhtml_system_config_frontend_vproducts_heading</frontend_model>
							<sort_order>100</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_vendor>1</show_in_vendor>
                        </extratabstitle>
						<relatedproducts>
							<label>Enable Related Products Tab</label>
							<frontend_type>select</frontend_type>
							<config_path>ced_vproducts/general/relatedproducts</config_path>
							<comment></comment>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<frontend_model>csproduct/adminhtml_system_config_frontend_vproducts_enable</frontend_model>
							<sort_order>110</sort_order>
							<show_in_website>1</show_in_website>
							<show_in_default>1</show_in_default>
							<show_in_vendor>1</show_in_vendor>
						</relatedproducts>
						<upsells>
							<label>Enable Up-sells Tab</label>
							<frontend_type>select</frontend_type>
							<config_path>ced_vproducts/general/upsells</config_path>
							<comment></comment>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<frontend_model>csproduct/adminhtml_system_config_frontend_vproducts_enable</frontend_model>
							<sort_order>120</sort_order>
							<show_in_website>1</show_in_website>
							<show_in_default>1</show_in_default>
							<show_in_vendor>1</show_in_vendor>
						</upsells>
						<crosssells translate="label comment">
							<label>Enable Cross-sells Tab</label>
							<frontend_type>select</frontend_type>
							<config_path>ced_vproducts/general/crosssells</config_path>
							<comment></comment>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<frontend_model>csproduct/adminhtml_system_config_frontend_vproducts_enable</frontend_model>
							<sort_order>130</sort_order>
							<show_in_website>1</show_in_website>
							<show_in_default>1</show_in_default>
							<show_in_vendor>1</show_in_vendor>
						</crosssells>
						<customoptions>
							<label>Enable Custom Options Tab</label>
							<frontend_type>select</frontend_type>
							<config_path>ced_vproducts/general/customoptions</config_path>
							<comment></comment>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<frontend_model>csproduct/adminhtml_system_config_frontend_vproducts_enable</frontend_model>
							<sort_order>140</sort_order>
							<show_in_website>1</show_in_website>
							<show_in_default>1</show_in_default>
							<show_in_vendor>1</show_in_vendor>
						</customoptions>
					</fields>
				</vproducts>
				<vproducts_downloadable_config>
					<frontend_model>csproduct/adminhtml_system_config_frontend_vproducts_fieldset</frontend_model>
					<show_in_vendor>1</show_in_vendor>
				</vproducts_downloadable_config>
			</groups>
		</ced_csmarketplace>
	</sections>
</config>
